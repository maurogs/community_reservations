<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3>AÃ±adir Nuevo Espacio</h3>
				</div>
				<div class="panel-body">
					<%= form_for [@space] do |f| %>        
                        <div class="form-inputs">
                            <div class="form-group">
                                <%= f.label :name %>
                                <%= f.text_field :name, class: 'form-control' %>      
                            </div>

                            <div class="form-group">
                                <%= f.label :type_space %>
                                <%= f.text_field :type_space, class: 'form-control' %>      
                            </div>

                            <div class="form-group">
                                <%= f.label :description %>
                                <%= f.text_field :description, class: 'form-control' %>      
                            </div>
                        </div>      

                        <div class="btn-group">
                            <%= f.submit 'Save', class: 'btn btn-primary' %>
                            <%= link_to 'Cancel', clients_path, class: "btn btn-default" %>            
                        </div>
                        <%= link_to 'Delete', client_path(@client), method: :delete, class: "btn btn-danger pull-right", data: { confirm: 'Are you sure?' } %>  
                    <% end %>
				</div>
			</div>
		</div>
	</div>
</div>